{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dune build",
            "type": "shell",
            "command": "dune build src/bin/driver.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$ocamlc"
            ]
        },
        {
            "label": "dune build bytecode",
            "type": "shell",
            "command": "dune build src/bin/driver.bc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$ocamlc"
            ]
        },
        {
            "label": "dune exec",
            "type": "shell",
            "command": "dune exec src/bin/driver.exe",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
